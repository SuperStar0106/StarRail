<Page x:Class="Starward.Pages.LauncherPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:av="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:Starward.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:sc="using:Starward.Controls"
      x:DefaultBindMode="OneWay"
      Loaded="Page_Loaded"
      Unloaded="Page_Unloaded"
      mc:Ignorable="d">

    <Page.Resources>
        <ThemeShadow x:Key="ThemeShadow" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>


        <!--  Banner & Post  -->
        <Grid Name="Grid_BannerAndPost"
              Width="432"
              Margin="40,200,40,0"
              HorizontalAlignment="Left"
              IsHitTestVisible="False"
              Opacity="0"
              RowSpacing="24">
            <Grid.OpacityTransition>
                <ScalarTransition />
            </Grid.OpacityTransition>
            <Grid.RowDefinitions>
                <RowDefinition Height="200" />
                <RowDefinition Height="124" />
            </Grid.RowDefinitions>
            <!--  Banner  -->
            <FlipView Name="FlipView_Banner"
                      Background="{ThemeResource CustomAcrylicBrush}"
                      CornerRadius="8"
                      ItemsSource="{x:Bind BannerList}"
                      PointerEntered="FlipView_Banner_PointerEntered"
                      PointerExited="FlipView_Banner_PointerExited"
                      Shadow="{StaticResource ThemeShadow}"
                      Translation="0,0,16">
                <FlipView.ItemTemplate>
                    <DataTemplate>
                        <sc:CachedImage Name="Image_Banner"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        IsRightTapEnabled="False"
                                        Source="{Binding Img}"
                                        Stretch="UniformToFill"
                                        Tapped="Image_Banner_Tapped"
                                        ToolTipService.ToolTip="{Binding Url}" />
                    </DataTemplate>
                </FlipView.ItemTemplate>
            </FlipView>
            <Border Padding="8,0,8,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Background="{ThemeResource CustomAcrylicBrush}"
                    CornerRadius="12,0,8,0">
                <PipsPager Name="PipsPager_Banner"
                           NumberOfPages="{x:Bind BannerList.Count}"
                           SelectedPageIndex="{x:Bind FlipView_Banner.SelectedIndex, Mode=TwoWay}" />
            </Border>

            <!--  Post  -->
            <Border Grid.Row="1"
                    Background="{ThemeResource CustomAcrylicBrush}"
                    CornerRadius="8"
                    Shadow="{StaticResource ThemeShadow}"
                    Translation="0,0,16">

                <Pivot ItemsSource="{x:Bind LauncherPostGroupList}">
                    <Pivot.Resources>
                        <Thickness x:Key="PivotItemMargin">0,0,0,0</Thickness>
                        <Thickness x:Key="PivotHeaderItemMargin">12,0,12,0</Thickness>
                        <Style BasedOn="{StaticResource DefaultPivotHeaderItemStyle}" TargetType="PivotHeaderItem">
                            <Setter Property="Height" Value="36" />
                            <Setter Property="FontSize" Value="16" />
                        </Style>
                    </Pivot.Resources>
                    <Pivot.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock FontSize="16"
                                       FontWeight="Bold"
                                       Text="{Binding Header}" />
                        </DataTemplate>
                    </Pivot.HeaderTemplate>
                    <Pivot.ItemTemplate>
                        <DataTemplate>
                            <PivotItem Margin="12,0,12,0">
                                <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Hidden">
                                    <ItemsRepeater Margin="0,0,0,8" ItemsSource="{Binding List}">
                                        <ItemsRepeater.Layout>
                                            <StackLayout Spacing="8" />
                                        </ItemsRepeater.Layout>
                                        <ItemsRepeater.ItemTemplate>
                                            <DataTemplate>
                                                <Grid ColumnSpacing="16">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock VerticalAlignment="Center" TextTrimming="WordEllipsis">
                                                        <Hyperlink Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                                                   NavigateUri="{Binding Url}"
                                                                   UnderlineStyle="None">
                                                            <Run Text="{Binding Title}" />
                                                        </Hyperlink>
                                                    </TextBlock>
                                                    <TextBlock Grid.Column="1"
                                                               VerticalAlignment="Center"
                                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                               Text="{Binding ShowTime}" />
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsRepeater.ItemTemplate>
                                    </ItemsRepeater>
                                </ScrollViewer>
                            </PivotItem>
                        </DataTemplate>
                    </Pivot.ItemTemplate>
                </Pivot>
            </Border>

        </Grid>


        <!--  Start Game  -->
        <StackPanel Margin="40"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal"
                    Spacing="16">

            <!--  Start Game  -->
            <Grid Width="240"
                  Background="{ThemeResource CustomAcrylicBrush}"
                  CornerRadius="20"
                  Shadow="{StaticResource ThemeShadow}"
                  Translation="0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Start Game  -->
                <Button Name="Button_StartGame"
                        Height="40"
                        HorizontalAlignment="Stretch"
                        BorderThickness="0"
                        Command="{x:Bind StartGameCommand}"
                        CornerRadius="20,0,0,20"
                        FontSize="14"
                        Style="{ThemeResource AccentButtonStyle}">
                    <StackPanel Margin="0,0,-40,0"
                                Orientation="Horizontal"
                                Spacing="8">
                        <TextBlock Name="TextBlock_StartGame"
                                   VerticalAlignment="Center"
                                   Text="{x:Bind StartGameButtonText}" />
                        <FontIcon Margin="0,2,0,0"
                                  VerticalAlignment="Center"
                                  FontSize="18"
                                  FontWeight="Bold"
                                  Glyph="&#xE76C;" />
                        <FontIcon Margin="-22,2,0,0"
                                  VerticalAlignment="Center"
                                  FontSize="18"
                                  FontWeight="Bold"
                                  Glyph="&#xE76C;" />
                    </StackPanel>
                </Button>

                <!--  game setting  -->
                <Button Name="Button_GameSetting"
                        Grid.Column="1"
                        Height="40"
                        BorderThickness="0"
                        CornerRadius="0,20,20,0"
                        Style="{ThemeResource AccentButtonStyle}">
                    <Button.Content>
                        <AnimatedIcon Width="20"
                                      Height="20"
                                      Margin="0,2,4,0">
                            <AnimatedIcon.Source>
                                <av:AnimatedSettingsVisualSource />
                            </AnimatedIcon.Source>
                            <AnimatedIcon.FallbackIconSource>
                                <FontIconSource Glyph="&#xE115;" />
                            </AnimatedIcon.FallbackIconSource>
                        </AnimatedIcon>
                    </Button.Content>
                    <Button.Flyout>
                        <Flyout>
                            <!--  Game Setting  -->
                            <StackPanel MinWidth="200"
                                        MaxWidth="400"
                                        Spacing="8">
                                <TextBlock FontSize="16"
                                           FontWeight="SemiBold"
                                           Text="游戏设置" />
                                <TextBlock Margin="0,8,0,0" Text="安装位置" />
                                <TextBlock FontSize="12"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           Text="{x:Bind InstallPath, TargetNullValue=---}"
                                           TextTrimming="CharacterEllipsis"
                                           ToolTipService.ToolTip="{x:Bind InstallPath}" />
                                <Button Command="{x:Bind ChangeGameInstallPathCommand}" Content="修改" />
                                <TextBlock Margin="0,8,0,0" Text="启动参数" />
                                <TextBox IsSpellCheckEnabled="False" Text="{x:Bind StartGameArgument, Mode=TwoWay}" />
                                <TextBlock Margin="0,8,0,0">
                                    <Run Text="FPS" />
                                    <Run Text="" />
                                    <Run Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="仅支持星穹铁道" />
                                </TextBlock>
                                <NumberBox Name="NumberBox_FPS"
                                           IsEnabled="False"
                                           Maximum="320"
                                           Minimum="60"
                                           SmallChange="10"
                                           SpinButtonPlacementMode="Inline"
                                           Value="{x:Bind TargetFPS, Mode=TwoWay}" />
                                <TextBlock Margin="0,8,0,0" Text="其他" />
                                <ToggleSwitch IsOn="{x:Bind EnableBannerAndPost, Mode=TwoWay}"
                                              OffContent="显示游戏公告"
                                              OnContent="显示游戏公告" />
                                <ToggleSwitch Margin="0,-8,0,0"
                                              IsOn="{x:Bind IgnoreRunningGame, Mode=TwoWay}"
                                              OffContent="忽略正在运行的游戏"
                                              OnContent="忽略正在运行的游戏" />
                            </StackPanel>
                        </Flyout>
                    </Button.Flyout>
                </Button>
            </Grid>

            <!--  Game Time  -->
            <Border Height="40"
                    Background="{ThemeResource CustomAcrylicBrush}"
                    CornerRadius="20"
                    Shadow="{StaticResource ThemeShadow}"
                    Translation="0,0,16">
                <Button Height="40"
                        BorderThickness="0"
                        CornerRadius="20">
                    <StackPanel Margin="4,2,4,0"
                                Orientation="Horizontal"
                                Spacing="8">
                        <FontIcon FontSize="20"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                  Glyph="&#xE121;" />
                        <TextBlock FontWeight="SemiBold"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   Text="{x:Bind PlayTimeTotal, Converter={StaticResource TimeSpanToStringConverter}}" />
                    </StackPanel>
                    <Button.Flyout>
                        <Flyout>
                            <StackPanel MinWidth="180" Spacing="8">
                                <TextBlock FontSize="16"
                                           FontWeight="SemiBold"
                                           Text="游戏时间" />
                                <Grid ColumnSpacing="16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Spacing="8">
                                        <TextBlock Text="本周" />
                                        <TextBlock Text="本月" />
                                        <TextBlock Text="上次" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Spacing="8">
                                        <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="{x:Bind PlayTimeWeek, Converter={StaticResource TimeSpanToStringConverter}}" />
                                        <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="{x:Bind PlayTimeMonth, Converter={StaticResource TimeSpanToStringConverter}}" />
                                        <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="{x:Bind PlayTimeLast, Converter={StaticResource TimeSpanToStringConverter}}" />
                                        <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="{x:Bind LastPlayTimeText}" />
                                    </StackPanel>
                                </Grid>
                                <Border Height="36"
                                        Margin="0,8,0,0"
                                        Background="{ThemeResource CustomAcrylicBrush}"
                                        CornerRadius="18">
                                    <Button Height="36"
                                            HorizontalAlignment="Stretch"
                                            BorderThickness="0"
                                            Command="{x:Bind UpdatePlayTimeCommand}"
                                            CornerRadius="18">
                                        <StackPanel Margin="12,0,12,0"
                                                    Orientation="Horizontal"
                                                    Spacing="8">
                                            <FontIcon FontSize="14" Glyph="&#xE149;" />
                                            <TextBlock Text="刷新" />
                                        </StackPanel>
                                    </Button>
                                </Border>
                            </StackPanel>
                        </Flyout>
                    </Button.Flyout>
                </Button>
            </Border>

        </StackPanel>




        <!--  Account  -->
        <StackPanel Height="40"
                    Margin="40"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal"
                    Spacing="16">

            <!--  account list  -->
            <Grid Background="{ThemeResource CustomAcrylicBrush}"
                  CornerRadius="20"
                  Shadow="{StaticResource ThemeShadow}"
                  Translation="0,0,16">
                <ComboBox Name="ComboBox_GameAccount"
                          Height="40"
                          MinWidth="240"
                          BorderThickness="0"
                          CornerRadius="0,20,20,0"
                          ItemsSource="{x:Bind GameAccountList}"
                          SelectedItem="{x:Bind SelectGameAccount, Mode=TwoWay}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="8,0,0,0" ColumnSpacing="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock VerticalAlignment="Center">
                                    <Run Text="{Binding Name}" />
                                    <Run Text="" />
                                    <Run FontSize="12"
                                         Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                         Text="{Binding Uid}" />
                                </TextBlock>
                                <FontIcon Grid.Column="1"
                                          VerticalAlignment="Bottom"
                                          FontSize="14"
                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                          Glyph="&#xE930;"
                                          ToolTipService.ToolTip="当前登录的账号"
                                          Visibility="{Binding IsLogin}" />
                            </Grid>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Grid>

            <!--  change account  -->
            <Grid Background="{ThemeResource CustomAcrylicBrush}"
                  CornerRadius="20"
                  Shadow="{StaticResource ThemeShadow}"
                  Translation="0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Button Height="40"
                        BorderThickness="0"
                        Command="{x:Bind ChangeGameAccountCommand}"
                        CornerRadius="20,0,0,20">
                    <TextBlock Margin="4,0,0,0" Text="切换账号" />
                </Button>
                <Button Grid.Column="1"
                        Height="40"
                        BorderThickness="0"
                        CornerRadius="0,20,20,0"
                        FontFamily="{ThemeResource SymbolThemeFontFamily}"
                        IsEnabled="{x:Bind SelectGameAccount, Converter={StaticResource ObjectToBoolConverter}}">
                    <FontIcon Margin="0,0,4,0"
                              FontSize="14"
                              Glyph="&#xE104;" />
                    <Button.Flyout>
                        <Flyout>
                            <StackPanel MinWidth="200" Spacing="8">
                                <TextBlock FontSize="16"
                                           FontWeight="SemiBold"
                                           Text="账号信息" />
                                <Button Width="0"
                                        Height="0"
                                        IsHitTestVisible="False" />
                                <TextBlock Text="昵称" />
                                <TextBox IsSpellCheckEnabled="False" Text="{x:Bind SelectGameAccount.Name, Mode=TwoWay}" />
                                <TextBlock Margin="0,8,0,0" Text="Uid" />
                                <NumberBox Minimum="0" Value="{x:Bind SelectGameAccount.Uid, Mode=TwoWay}" />
                                <Grid Margin="0,16,0,0"
                                      HorizontalAlignment="Left"
                                      Background="{ThemeResource CustomAcrylicBrush}"
                                      CornerRadius="20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Button Width="100"
                                            Height="40"
                                            Command="{x:Bind SaveGameAccountCommand}"
                                            CornerRadius="20,0,0,20">
                                        <StackPanel Orientation="Horizontal" Spacing="12">
                                            <FontIcon Name="FontIcon_SaveGameAccount"
                                                      FontSize="16"
                                                      Glyph="&#xE105;" />
                                            <TextBlock Text="保存" />
                                        </StackPanel>
                                    </Button>
                                    <Button Grid.Column="1"
                                            Width="100"
                                            Height="40"
                                            Command="{x:Bind DeleteGameAccountCommand}"
                                            CornerRadius="0,20,20,0">
                                        <StackPanel Orientation="Horizontal" Spacing="12">
                                            <TextBlock Text="删除" />
                                            <FontIcon FontSize="16" Glyph="&#xE107;" />
                                        </StackPanel>
                                    </Button>
                                </Grid>
                            </StackPanel>
                        </Flyout>
                    </Button.Flyout>
                </Button>
            </Grid>


        </StackPanel>



    </Grid>
</Page>
